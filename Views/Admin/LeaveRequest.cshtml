@model IEnumerable<Leave>
@using Leaves_Models;
<!DOCTYPE html>
<html>
<body>
   
    <div class="container-fluid" style="margin-left: -15%;">

        <h1>LeaveRequests <a asp-action="AdminDashBoard" asp-controller="Login" class="btn btn-sm btn-secondary">Back</a></h1>


        <table class="text-align: center" class="table table-bordered table-sm table-striped"  style="margin-left:27%;">
            <thead>
                <tr >
                  <th>id</th>
                  <th>Username</th>
                  <th>From Date</th>
                   <th>NumberofDates</th>
                    <th>Reason</th>
                    <th>Requests</th>

                    
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <tr>
                        <td colspan="12" class="text-center">No Model Data</td>
                    </tr>
                }
                else
                {
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.id</td>
                            <td>@p.Username</td>
                            <td>@p.FromDate.ToLongDateString()</td>
                            <td>@p.NumberofDates</td>
                            <td>@p.Reason</td>
                            <td>
                            <div class="buttons-to-center">
                            <a class="btn-gray mr-2" asp-action="reject" asp-controller="admin" asp-route-id="@p.id"><i class="far fa-times-circle mr-2"></i> Reject</a>
                            <a  class="btn-gray" asp-action="approve" asp-controller="admin" asp-route-id="@p.id"><i class="far fa-check-circle mr-2"></i> Approve</a>
                            </div>
                        </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
</body>

</main>
